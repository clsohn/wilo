</ul>

<div class="container">
  <div class="top-bar">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="top-bar-right">
        <ul class="menu horizontal">
          <% if user_signed_in? %>
            <li>
              <%= link_to "Hi #{current_user.first_name}",
                user_path(current_user)
              %>
            </li>
            <li>
              <%= link_to "Sign Out",
                destroy_user_session_path, method: :delete
              %>
            </li>
          <% else %>
            <li> <%= link_to "Sign In", new_user_session_path %> </li>
            <li> <%= link_to "Sign Up", new_user_registration_path %> </li>
          <% end %>
        </ul>
    </div>
  </div>
  <div class="title">What's it like out?</div>
  <h2>Be prepared for the day's weather</h2>
  <div class="jumbotron">
    <div class="box">
        <%= render "users/message" %>
    </div>
  </div>
  <% if user_signed_in? %>
    <h2> See today's <span><%= link_to "recommendation", new_user_path %></span> for <%= current_user.first_name %></h2>
  <% else %>
    <h2>First time here? <span><%= link_to "Sign up", new_user_registration_path  %></span> for your personal recommendation</h2>
  <% end %>
</div>
